<features name="karaf-cellar-4.0.0" xmlns="http://karaf.apache.org/xmlns/features/v1.3.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://karaf.apache.org/xmlns/features/v1.3.0 http://karaf.apache.org/xmlns/features/v1.3.0">

    <repository>mvn:org.apache.jclouds.karaf/jclouds-karaf/1.8.1/xml/features</repository>
    <repository>mvn:io.fabric8/karaf-features/2.2.23/xml/features</repository>
    
    <feature name="cellar-core" description="Karaf clustering core" version="4.0.0">
        <feature>aries-proxy</feature>
        <feature>shell</feature>
        <configfile finalname="/etc/org.apache.karaf.cellar.groups.cfg">mvn:org.apache.karaf.cellar/apache-karaf-cellar/4.0.0/cfg/groups</configfile>
        <configfile finalname="/etc/org.apache.karaf.cellar.node.cfg">mvn:org.apache.karaf.cellar/apache-karaf-cellar/4.0.0/cfg/node</configfile>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.core/4.0.0</bundle>
    </feature>

    <feature name="hazelcast" description="In memory data grid" version="3.5.2">
        <configfile finalname="/etc/hazelcast.xml">mvn:org.apache.karaf.cellar/apache-karaf-cellar/4.0.0/xml/hazelcast</configfile>
        <bundle>mvn:org.apache.geronimo.specs/geronimo-jta_1.1_spec/1.1.1</bundle>
        <bundle>mvn:com.eclipsesource.minimal-json/minimal-json/0.9.2</bundle>
        <bundle>mvn:com.hazelcast/hazelcast-all/3.5.2</bundle>
    </feature>

    <feature name="cellar-hazelcast" description="Cellar implementation based on Hazelcast" version="4.0.0">
        <feature version="3.5.2">hazelcast</feature>
        <feature version="4.0.0">cellar-core</feature>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.hazelcast/4.0.0</bundle>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.utils/4.0.0</bundle>
    </feature>

    <feature name="cellar-config" description="ConfigAdmin cluster support" version="4.0.0">
        <feature>config</feature>
        <feature>cellar-hazelcast</feature>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.config/4.0.0</bundle>
    </feature>

    <feature name="cellar-features" description="Karaf features cluster support" version="4.0.0">
        <feature>feature</feature>
        <feature>cellar-hazelcast</feature>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.features/4.0.0</bundle>
    </feature>

    <feature name="cellar-bundle" description="Bundle cluster support" version="4.0.0">
        <feature>bundle</feature>
        <feature>cellar-hazelcast</feature>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.bundle/4.0.0</bundle>
    </feature>

    <feature name="cellar-shell" description="Cellar shell support" version="4.0.0">
        <feature>shell</feature>
        <feature>cellar-hazelcast</feature>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.shell/4.0.0</bundle>
    </feature>

    <feature name="cellar" description="Karaf clustering" version="4.0.0">
        <feature>cellar-hazelcast</feature>
        <feature>cellar-shell</feature>
        <feature>cellar-config</feature>
        <feature>cellar-bundle</feature>
        <feature>cellar-features</feature>
    </feature>

    <feature name="cellar-dosgi" description="DOSGi support" version="4.0.0">
        <feature>cellar-hazelcast</feature>
        <bundle start-level="40">mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.dosgi/4.0.0</bundle>
    </feature>

    <feature name="cellar-obr" description="OBR cluster support" version="4.0.0">
        <feature>obr</feature>
        <feature>cellar-hazelcast</feature>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.obr/4.0.0</bundle>
    </feature>

    <feature name="cellar-eventadmin" description="OSGi events broadcasting in clusters" version="4.0.0">
        <feature>eventadmin</feature>
        <feature>cellar-hazelcast</feature>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.event/4.0.0</bundle>
    </feature>

    <feature name="cellar-cloud" description="Cloud blobstore support in clusters" version="4.0.0">
        <feature>cellar-hazelcast</feature>
        <feature version="1.8.1">jclouds</feature>
        <!-- Adding S3 as the default Blobstore -->
        <feature>jclouds-aws-s3</feature>
        <bundle>mvn:joda-time/joda-time/2.5</bundle>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.cloud/4.0.0</bundle>
    </feature>

    <feature name="cellar-kubernetes" description="Cellar kubernetes support in clusters" version="4.0.0">
        <feature>fabric8-kubernetes-api</feature>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.kubernetes/4.0.0</bundle>
    </feature>

    <feature name="cellar-webconsole" description="Cellar plugin for Karaf WebConsole" version="4.0.0">
        <feature>webconsole</feature>
        <feature>cellar-hazelcast</feature>
        <bundle>mvn:org.apache.karaf.cellar/org.apache.karaf.cellar.webconsole/4.0.0</bundle>
    </feature>

    <feature name="cellar-http-balancer" description="Cellar HTTP request balancer" version="4.0.0">
        <feature>cellar-hazelcast</feature>
        <feature>http</feature>
        <feature>http-whiteboard</feature>
        <bundle>mvn:org.apache.karaf.cellar.http/org.apache.karaf.cellar.http.balancer/4.0.0</bundle>
    </feature>

</features>

